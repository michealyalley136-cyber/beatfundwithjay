# ---------------------------------------------------
# ✅ CORE FLASK CONFIG
# ---------------------------------------------------
FLASK_ENV=development
SECRET_KEY=supersecret123

# ---------------------------------------------------
# ✅ DATABASE CONFIG
# Local SQLite (development)
DATABASE_URL=sqlite:///app.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/beatfund

# ---------------------------------------------------
# ✅ MARKETPLACE SETTINGS
# Marketplace fee charged to buyers (default 12 percent)
MARKET_FEE_RATE=0.12

# Sellers can choose to cover marketplace fee (true/false)
ALLOW_SELLER_COVER_FEE=true

# Maximum upload size for beats
MAX_BEAT_UPLOAD_MB=50

# ---------------------------------------------------
# ✅ BEAT STORAGE (Choose Local or AWS)
# LOCAL STORAGE (development)
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=static/uploads

# AWS S3 STORAGE (production)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET_NAME=
# AWS_S3_REGION=

# ---------------------------------------------------
# ✅ BOOKING SYSTEM CONFIG ("BookMe")
# Used for studios, engineers, designers, producers
BOOKING_ENABLE=true
BOOKING_REMINDER_HOURS=24
BOOKING_CANCELLATION_WINDOW_HOURS=6

# ---------------------------------------------------
# ✅ CRM / MARKETING SYSTEM
CRM_ENABLE=true
CRM_EMAIL_TRACKING=true
CRM_CAMPAIGN_AUTO_SEND=false

# ---------------------------------------------------
# ✅ EMAIL SETTINGS
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password-or-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ---------------------------------------------------
# ✅ WALLET / PAYMENT SETTINGS
# Internal ledger is local, but you can later plug Stripe or PayPal
PAYMENT_GATEWAY=fake   # (fake, stripe, paypal)
STRIPE_API_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# ---------------------------------------------------
# ✅ NOTIFICATIONS
ENABLE_SMS_NOTIFICATIONS=false
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

ENABLE_PUSH_NOTIFICATIONS=false
FIREBASE_API_KEY=

# ---------------------------------------------------
# ✅ AUDIT / SECURITY CONFIG
ENABLE_AUDIT_LOGS=true
AUDIT_LOG_RETENTION_DAYS=365

# ---------------------------------------------------
# ✅ ROYALTY / INTEREST SYSTEM (future feature)
ROYALTY_INTEREST_RATE=0.03
ROYALTY_ENABLE_COMPOUND=false

# ---------------------------------------------------
# ✅ APP BEHAVIOR SETTINGS
AUTO_APPROVE_KYC=false
ALLOW_USER_SOFT_DELETE=true
SUPPORT_ACCESS_REQUIRES_REASON=true
